{
  "compilerOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2016", "dom"],
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "client"]
}
